        <Image x:FieldModifier="public" Name="imgSubProduct" HorizontalAlignment="Left" Height="250" Margin="178,1497,0,0" VerticalAlignment="Top" Width="250"/>
        <Image HorizontalAlignment="Left" Height="206" Margin="840,37,0,0" VerticalAlignment="Top" Width="230" Source="/ProjectN;component/Images/button.close.highlight.png"/>
        <Button x:FieldModifier="public" x:Name="btnClose" HorizontalAlignment="Left" Height="206" Margin="840,37,0,0" VerticalAlignment="Top" Width="200" Opacity="0">
            <Button.OpacityMask>
                <ImageBrush/>
            </Button.OpacityMask>
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="44" Margin="635,310,0,0" VerticalAlignment="Top" Width="131" Source="/ProjectN;component/Images/text.name.png" Stretch="Fill"/>
        <Image x:FieldModifier="public" x:Name="imgLike" HorizontalAlignment="Left" Height="206" Margin="42,37,0,0" VerticalAlignment="Top" Width="230" Source="/ProjectN;component/Images/button.like.png"/>
        <Button x:FieldModifier="public" x:Name="btnLike" HorizontalAlignment="Left" Height="206" Margin="42,37,0,0" VerticalAlignment="Top" Width="200" Opacity="0">
            <Button.OpacityMask>
                <ImageBrush/>
            </Button.OpacityMask>
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
