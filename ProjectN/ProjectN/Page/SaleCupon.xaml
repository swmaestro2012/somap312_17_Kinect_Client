        </Button>
        <Button x:FieldModifier="public" x:Name="btnReturn" HorizontalAlignment="Left" Height="209" Margin="28,19,0,0" VerticalAlignment="Top" Width="206" Opacity="0">
            <Button.OpacityMask>
                <ImageBrush/>
            </Button.OpacityMask>
            <Button.Foreground>
                <ImageBrush/>
            </Button.Foreground>
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
